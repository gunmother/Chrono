    color:var(--ink);
    display:grid;
    place-items:center;
    cursor:pointer;
    outline:none;
    transition:none;
    padding:0;
    margin:0;                        /* ensure edge alignment */
    flex:0 0 var(--btn);             /* fixed circles; distributed by space-between */
  }
  .btn[aria-pressed="true"]{ background:var(--pressed); }
  .btn:focus-visible{ outline:2px solid var(--ink); outline-offset:2px; }

  /* icons */
  .icon{ width:60%; height:60%; display:block }
