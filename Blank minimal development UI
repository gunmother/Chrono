    box-sizing: border-box;
  }

  /* Buttons row has the SAME width as the screen (no extra side padding) */
  .controls{
    display:flex;
    justify-content: space-between;  /* first and last button edges coincide with screen edges */
    align-items:center;
    width:100%;
  }

